---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { members } from '../../data/members';

const activeMembers = members.filter(member => member.status === 'active');
const alumniMembers = members.filter(member => member.status === 'alumni');

const formatDate = (dateString: string) => {
  return new Date(dateString).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long'
  });
};
---

<BaseLayout title="Members - Half Tech Circle" description="Meet the members of Half Tech Circle. Learn about the team behind our technical books and their areas of expertise.">
  <Header />
  
  <main class="py-16 bg-gray-50 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Page Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Members</h1>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          Meet the team behind our technical books. Each member brings unique expertise and experience,
          combining their knowledge to create high-quality content.
        </p>
      </div>

      <!-- Active Members -->
      <section class="mb-16">
        <h2 class="text-2xl font-bold text-gray-900 mb-8">Current Members</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {activeMembers.map((member) => (
            <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
              <div class="p-6">
                <!-- Avatar -->
                <div class="flex justify-center mb-4">
                  <div class="w-24 h-24 bg-gradient-to-br from-blue-400 to-purple-500 rounded-full flex items-center justify-center">
                    <span class="text-white text-2xl font-bold">
                      {member.name.en.charAt(0)}
                    </span>
                  </div>
                </div>
                
                <!-- Name and Role -->
                <div class="text-center mb-4">
                  <h3 class="text-xl font-bold text-gray-900 mb-1">
                    {member.name.en}
                  </h3>
                  <p class="text-blue-600 font-medium">
                    {member.role.en}
                  </p>
                </div>
                
                <!-- Bio -->
                <p class="text-gray-600 text-sm mb-4 leading-relaxed">
                  {member.bio.en}
                </p>
                
                <!-- Skills -->
                <div class="mb-4">
                  <h4 class="text-sm font-semibold text-gray-900 mb-2">Skills</h4>
                  <div class="flex flex-wrap gap-2">
                    {member.skills.map((skill) => (
                      <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-xs">
                        {skill}
                      </span>
                    ))}
                  </div>
                </div>
                
                <!-- Social Links -->
                <div class="flex justify-center space-x-3">
                  {member.socialLinks.twitter && (
                    <a
                      href={member.socialLinks.twitter}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-gray-400 hover:text-blue-400 transition-colors"
                      aria-label="Twitter"
                    >
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"/>
                      </svg>
                    </a>
                  )}
                  {member.socialLinks.github && (
                    <a
                      href={member.socialLinks.github}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-gray-400 hover:text-gray-600 transition-colors"
                      aria-label="GitHub"
                    >
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"/>
                      </svg>
                    </a>
                  )}
                  {member.socialLinks.linkedin && (
                    <a
                      href={member.socialLinks.linkedin}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-gray-400 hover:text-blue-600 transition-colors"
                      aria-label="LinkedIn"
                    >
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                      </svg>
                    </a>
                  )}
                  {member.socialLinks.website && (
                    <a
                      href={member.socialLinks.website}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-gray-400 hover:text-green-600 transition-colors"
                      aria-label="Website"
                    >
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9"></path>
                      </svg>
                    </a>
                  )}
                </div>
                
                <!-- Join Date -->
                <div class="mt-4 text-center">
                  <p class="text-xs text-gray-500">
                    Joined: {formatDate(member.joinDate)}
                  </p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </section>

      <!-- Alumni Section (if any) -->
      {alumniMembers.length > 0 && (
        <section>
          <h2 class="text-2xl font-bold text-gray-900 mb-8">Alumni</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {alumniMembers.map((member) => (
              <div class="bg-white rounded-lg shadow-md overflow-hidden opacity-75">
                <div class="p-6">
                  <div class="flex justify-center mb-4">
                    <div class="w-24 h-24 bg-gradient-to-br from-gray-400 to-gray-500 rounded-full flex items-center justify-center">
                      <span class="text-white text-2xl font-bold">
                        {member.name.en.charAt(0)}
                      </span>
                    </div>
                  </div>
                  
                  <div class="text-center mb-4">
                    <h3 class="text-xl font-bold text-gray-900 mb-1">
                      {member.name.en}
                    </h3>
                    <p class="text-gray-600 font-medium">
                      {member.role.en}
                    </p>
                  </div>
                  
                  <p class="text-gray-600 text-sm mb-4 leading-relaxed">
                    {member.bio.en}
                  </p>
                </div>
              </div>
            ))}
          </div>
        </section>
      )}

      <!-- Join Us Section -->
      <section class="mt-16 bg-gradient-to-r from-blue-600 to-purple-700 rounded-lg p-8 text-center">
        <h2 class="text-2xl font-bold text-white mb-4">
          Want to Create Technical Books with Us?
        </h2>
        <p class="text-blue-100 mb-6">
          We're looking for people interested in technical book production and contributing to the tech community.
          You can participate in various ways: writing, editing, design, marketing, and more.
        </p>
        <a
          href="/en/contact"
          class="bg-white text-blue-600 px-6 py-3 rounded-lg font-semibold hover:bg-blue-50 transition-colors inline-block"
        >
          Contact Us
        </a>
      </section>
    </div>
  </main>
  
  <Footer />
</BaseLayout>